<!DOCTYPE html>
<html>
  <head>
    <title>Dynamic Page</title>
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <link rel="stylesheet" href="https://jw1448.brighton.domains/jwTraining/css/index.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="icon" href="https://jw1448.brighton.domains/jwTraining/assets/jwTraining.ico">
    <script src="https://jw1448.brighton.domains/jwTraining/javascript/index.js"></script>
    <script src="https://www.youtube.com/player_api"></script>
  </head>
  <body>
    <div class="header">
    <div class="row">
        <div class="column medium"></div>
        <div class="column medium"><h2>jwTraining</h2></div>
        <div class="column medium">
            <div class="card profile">
                <p><i class="fa fa-user-o" aria-hidden="true"></i> <span id="profile-card-username">Username</span></p>
            </div>
        </div>
    </div>
</div>
<div class="topnav" id="topNav">
  <a href="#dashboard">DashBoard</a>
  <a href="#account">Account</a>
  <a href="#training">Training</a>
  <a href="#contact">Contacts</a>
  <a href="javascript:void(0);" class="icon" onclick="mobFriNav()">
    <i class="fa fa-bars"></i>
  </a>
</div>

<div class="row">
  <div class="column small" style="background-color:#ccc;"></div>
  <div class="column medium" style="background-color:#bbb;">
    <div class="card">
        <div class="container">
            <h4><%= title %></h4> 
            <div class="player-container">
                <div id="player"></div>
            </div>
            <p><%- main_content.replace(/\n/g, "<br>") %></p> 
        </div>
    </div>
  </div>
  <div class="column small" style="background-color:#ccc;"></div>
</div>

<div class="footer">
  <p>Footer</p>
</div>

<script>
// create youtube player with api
let player;
function onYouTubePlayerAPIReady() {
    player = new YT.Player('player', {
        width: '100%',
        videoId: 'jNQXAC9IVRw',
        events: {
            'onReady': onPlayerReady,
            'onStateChange': onPlayerStateChange
        }
    });
}

// video will autoplay when ready
function onPlayerReady(event) {
    event.target.playVideo();
}

// video will do something when it ends
function onPlayerStateChange(event) {        
    if(event.data === 0) {            
        alert('alert');
    }
}
</script>
<style>
    .player-container {
        float: none;
        clear: both;
        width: 100%;
        position: relative;
        padding-bottom: 56.25%;
        padding-top: 25px;
        height: 0;
    }
    .player-container iframe {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }
</style>

</body>
</html>